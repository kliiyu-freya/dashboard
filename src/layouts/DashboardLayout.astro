---
import '@fontsource/inter';
import Sidebar from '../components/navigation/Sidebar.astro';
import SpotifySidebar from '../components/ui/SpotifySidebar.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Freya Dashboard</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 dark:bg-dark-100 text-gray-900 dark:text-white">
    <div class="flex h-screen">
      <Sidebar />
      <SpotifySidebar />
      <main class="flex-1 p-8 overflow-auto">
        <slot />
      </main>
    </div>
  </body>
</html>

<script>
  import { initializeWebSocket } from '../utils/websocket';
  
  // Initialize WebSocket connection
  const connectionSettings = localStorage.getItem('connectionSettings');
  let url: string;
  if (connectionSettings) {
    const { coreIp, corePort } = JSON.parse(connectionSettings);
    if (coreIp && corePort) {
      url = `ws://${coreIp}:${corePort}/ws`;
    } else {
      url = `ws://localhost:6672/ws`;
    }
  } else {
    url = `ws://localhost:6672/ws`;
  }
  initializeWebSocket(url);

  // Setup settings cookie
  const settings = localStorage.getItem('settings');
  if (!settings) {
    const initialSettings = {};
    localStorage.setItem('settings', JSON.stringify(initialSettings));
  }
</script>