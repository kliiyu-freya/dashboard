---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import Card from '../components/ui/Card.astro';
import Icon from '../components/ui/Icon.astro';
---

<DashboardLayout title="Automations">
  <div class="space-y-6">
    <Card title="Morning Routine">
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <Icon name="schedule" class="text-primary-500 mr-2" />
            <span>7:00 AM</span>
          </div>
          <button class="text-primary-600 dark:text-primary-500">
            <Icon name="edit" class="text-primary-500" />
          </button>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Turn on lights, adjust temperature, start coffee maker
        </div>
      </div>
    </Card>
  </div>
</DashboardLayout>