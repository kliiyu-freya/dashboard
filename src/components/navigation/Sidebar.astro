---
import Icon from '../ui/Icon.astro';
import Logo from '../header/Logo.astro';
import WeatherCard from '../ui/WeatherCard.astro';

const navigation = [
  { name: 'Dashboard', href: '/', icon: 'dashboard' },
  { name: 'Devices', href: '/devices', icon: 'devices' },
  { name: 'Automations', href: '/automations', icon: 'auto_mode' },
  { name: 'Assistant', href: '/assistant', icon: 'assistant' },
  { name: 'Settings', href: '/settings', icon: 'settings' },
  { name: 'System', href: '/system', icon: 'memory' },
];

const currentPath = Astro.url.pathname;
---

<aside class="w-64 bg-white dark:bg-dark-200 border-r border-gray-200 dark:border-dark-300">
  <div class="h-16 flex items-center px-6 border-b border-gray-200 dark:border-dark-300">
    <Logo />
  </div>
  
  <nav class="p-4">
    <ul class="space-y-2">
      {navigation.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              'flex items-center px-4 py-2 rounded-lg text-sm font-medium',
              currentPath === item.href
                ? 'bg-primary-50 dark:bg-primary-700/20 text-primary-600 dark:text-primary-500'
                : 'text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-dark-300'
            ]}
          >
            <Icon name={item.icon} class="mr-3 text-xl" />
            {item.name}
          </a>
        </li>
      ))}
      <WeatherCard />
    </ul>
  </nav>
</aside>