<div class="connection-status flex items-center bg-gray-100 dark:bg-gray-700 rounded-full px-3 py-1.5">
  <span class="status-dot w-2.5 h-2.5 rounded-full mr-2"></span>
  <span class="status-text text-sm font-medium text-gray-700 dark:text-gray-300"></span>
</div>

<script>
  import { wsStatus } from '../../stores/websocket';

  wsStatus.subscribe((status) => {
    const dot = document.querySelector('.status-dot');
    const text = document.querySelector('.status-text');
    
    if (status === 'connected') {
      dot?.classList.add('bg-green-500');
      dot?.classList.remove('bg-red-500');
      if (text) text.textContent = 'Connected';
    } else {
      dot?.classList.add('bg-red-500');
      dot?.classList.remove('bg-green-500');
      if (text) text.textContent = 'Disconnected';
    }
  });
</script>