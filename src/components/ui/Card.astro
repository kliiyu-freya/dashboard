---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={["bg-white dark:bg-dark-200 rounded-lg shadow-sm border border-gray-200 dark:border-dark-300", className]}>
  <div class="px-6 py-4 border-b border-gray-200 dark:border-dark-300">
    <h3 class="font-medium">{title}</h3>
  </div>
  <div class="p-6">
    <slot />
  </div>
</div>